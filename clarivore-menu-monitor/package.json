{
  "name": "clarivore-menu-monitor",
  "version": "1.0.0",
  "description": "Automated menu change detection system for Clarivore restaurants",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "db:migrate": "node src/database/migrate.js",
    "db:seed": "node src/database/seed.js",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "test:email": "node -e \"require('./src/services/email').sendTestEmail(process.env.TEST_EMAIL || 'test@example.com')\"",
    "test": "jest"
  },
  "keywords": [
    "menu",
    "monitoring",
    "restaurant",
    "allergy",
    "clarivore"
  ],
  "author": "Clarivore",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.7",
    "cheerio": "^1.0.0-rc.12",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.9",
    "pg": "^8.11.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.3"
  }
}
